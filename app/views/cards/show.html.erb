<div class="d-flex justify-content-between p-5">
  <div class="back-to-lesson"><%= link_to 'Back to lesson', lesson_path(@card.lesson)%></div>
  <div class="bookmark-icon">
    <% if @card.bookmarked == true %>
      Bookmarked <%= lucide_icon('bookmark-check') %>
    <% else %>
      <%= link_to bookmark_card_path(@card) do %>
        Add to bookmarks <%= lucide_icon('bookmark') %>
      <% end %>
    <% end %>
  </div>

</div>

<div class="container text-center">
  <div class="card-content">
    <%# render partials of templates here%>
    <%= render @template_path, card: @card %>
  </div>

  <div class="text-center">
    <%= simple_form_for @card do |f| %>
      <%= f.input :user_answer, label: false %>
      <%= f.submit "Answer" %>
    <% end %>

   <%#= link_to 'Answer', card_path(@card.lesson.next_card), class: 'next-card-btn mt-auto align-self-end' %>
  </div>


  <div class="thumbnails">
    <% @card.lesson.cards.each do |card| %>
        o
    <% end %>

  </div>
</div>
